@model IEnumerable<RentalServices.Models.Customer>
@{
    ViewData["Title"] = "Active Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Active Customers</h2>

@if (!Model.Any())
{
    <text>We do not have any customers at this time.</text>
}
else
{
    <table class="table table-striped table-hover ">
        <tr>
            <th>Customer</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details","Customer",new { id = customer.Id }, null)</td>
            </tr>
        }
    </table>
}