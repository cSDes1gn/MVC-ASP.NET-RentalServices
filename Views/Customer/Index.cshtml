@model RentalServices.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Active Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Active Customers</h2>

@if (Model.Customers.Count == 0)
{
    <text>We do not have any customers at this time.</text>
}
else
{
    <table class="table table-striped table-hover ">
        <tr>
            <th>Customer</th>
        </tr>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
            </tr>
        }
    </table>
}